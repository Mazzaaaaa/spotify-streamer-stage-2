    <android.support.v7.widget.SearchView
        android:id="@+id/searchview_artist"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="text"
        app:iconifiedByDefault="false"
        app:queryHint="@string/query_hint_artist"/>

    <ProgressBar
        android:id="@+id/progressbar_artist"
        style="@style/ProgressBar"
        android:layout_below="@+id/searchview_artist"
        android:visibility="gone" />

    <TextView
        android:id="@+id/textview_artist"
        style="@style/MsgTheme"
        android:text="@string/artist_not_found"
        android:layout_below="@+id/searchview_artist"
        android:visibility="gone"/>

    <ListView
        android:id="@+id/listview_artist"
        style="@style/ArtistItemListStyle"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/searchview_artist" />

</RelativeLayout>
