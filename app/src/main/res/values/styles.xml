<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/material_blue_500</item>
        <item name="colorPrimaryDark">@color/material_blue_700</item>
        <!--<item name="colorAccent">@color/material_teal_A400</item>-->
        <!--<item name="android:windowBackground">@color/material_blue_grey_900</item>-->
        <!--<item name="android:textColorPrimary">@color/primary_text_default_material_dark</item>-->
    </style>

    <style name="BaseFragmentDialog">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="BaseRelativeLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:paddingLeft">@dimen/activity_horizontal_margin</item>
        <item name="android:paddingRight">@dimen/activity_horizontal_margin</item>
        <item name="android:paddingTop">@dimen/activity_vertical_margin</item>
        <item name="android:paddingBottom">@dimen/activity_vertical_margin</item>
    </style>

    <style name="MsgTheme">
        <item name="android:paddingTop">@dimen/padding_from_top</item>
        <item name="android:textStyle">bold</item>
        <!--<item name="android:textSize">@dimen/msg_size</item>-->
        <item name="android:textAppearance">?android:textAppearanceMedium</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerInParent">true</item>
        <!--<item name="android:textColor">@color/primary_text_default_material_dark</item>-->
    </style>

    <style name="ProgressBar">
        <item name="android:paddingTop">@dimen/padding_from_top</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:indeterminate">true</item>
        <item name="android:layout_centerInParent">true</item>
    </style>

    <style name="ArtistItemListStyle">
    </style>

    <!-- Settings activity theme. -->
    <style name="SettingsTheme" parent="AppTheme">
    </style>


</resources>
